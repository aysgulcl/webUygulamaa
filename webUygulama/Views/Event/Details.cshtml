@model Event

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <h2>@Model.Name</h2>
            <img src="@Model.ImageUrl" class="img-fluid mb-3" alt="@Model.Name" />
            <p class="lead">@Model.Description</p>
            <div class="mt-3">
                <p><strong>Tarih:</strong> @Model.Date.ToString("dd.MM.yyyy HH:mm")</p>
                <p><strong>Konum:</strong> @Model.Location</p>
                <p><strong>Kategori:</strong> @Model.Category</p>
            </div>

            <div class="card mt-4">
                <div class="card-body">
                    <h5 class="card-title">Bilet Seçimi</h5>
                    <form asp-controller="Cart" asp-action="AddToCart" method="post">
                        <input type="hidden" name="eventId" value="@Model.Id" />
                        
                        <div class="form-group mb-3">
                            <label for="ticketType">Bilet Tipi:</label>
                            <select class="form-control" id="ticketType" name="ticketType" required>
                                <option value="Normal">Normal Bilet - @Model.NormalTicketPrice.ToString("C")</option>
                                <option value="VIP">VIP Bilet - @Model.VIPTicketPrice.ToString("C")</option>
                                <option value="Student">Öğrenci Bileti - @Model.StudentTicketPrice.ToString("C")</option>
                                <option value="Senior">65 Yaş Üstü Bilet - @Model.SeniorTicketPrice.ToString("C")</option>
                            </select>
                        </div>

                        <div class="form-group mb-3">
                            <label for="quantity">Adet:</label>
                            <input type="number" class="form-control" id="quantity" name="quantity" value="1" min="1" required />
                        </div>

                        <button type="submit" class="btn btn-primary">Sepete Ekle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 