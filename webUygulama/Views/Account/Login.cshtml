@model webUygulama.Models.LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Giriş Yap</title>
    <style>
        /* Arkaplanı pembe yapıyoruz */
        body {
            background-color: #ffccf2; /* Pembe tonunda bir arka plan */
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            height: 100vh;
        }

        /* Sayfa merkezleme için container */
        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100%;
        }

        /* Formu estetik hale getirmek için stil */
        .form-container {
            background-color: #ffffff; /* Beyaz arka plan */
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 400px; /* Maksimum genişlik */
        }

        /* Başlık stili */
        .form-container h2 {
            text-align: center;
            color: #333;
            margin-bottom: 20px;
        }

        /* Form elemanları için stil */
        .form-group {
            margin-bottom: 20px;
        }

        /* Etiket (label) stili */
        label {
            display: block;
            font-size: 14px;
            margin-bottom: 5px;
            color: #666;
        }

        /* Giriş kutuları */
        .form-control {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 14px;
            box-sizing: border-box;
        }

        /* Hover ve focus durumunda kutu rengi */
        .form-control:focus {
            border-color: #ff66b2;
            outline: none;
            box-shadow: 0 0 5px rgba(255, 102, 178, 0.5);
        }

        /* Butonların stili */
        .btn {
            background-color: #ff66b2;
            color: white;
            padding: 12px;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            width: 100%;
            cursor: pointer;
            transition: background-color 0.3s ease;
            margin-bottom: 10px;
            text-decoration: none;
            display: inline-block;
            text-align: center;
            box-sizing: border-box;
        }

        /* Buton hover (fareyle üzerine gelindiğinde) */
        .btn:hover {
            background-color: #ff3385;
        }

        /* Kayıt ol bağlantısı */
        .register-link {
            text-align: center;
            margin-top: 20px;
        }

        .register-link a {
            color: #ff66b2;
            text-decoration: none;
        }

        .register-link a:hover {
            text-decoration: underline;
        }

        /* Alert kutuları */
        .alert {
            padding: 10px;
            margin-bottom: 20px;
            border-radius: 5px;
            text-align: center;
        }

        .alert-danger {
            background-color: #ffe6e6;
            color: #ff0000;
            border: 1px solid #ffcccc;
        }

        .alert-success {
            background-color: #e6ffe6;
            color: #006600;
            border: 1px solid #ccffcc;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card mt-5">
                    <div class="card-header bg-primary text-white">
                        <h3 class="card-title mb-0">Giriş Yap</h3>
                    </div>
                    <div class="card-body">
                        @if (TempData["Success"] != null)
                        {
                            <div class="alert alert-success">
                                @TempData["Success"]
                            </div>
                        }
                        @if (TempData["Error"] != null)
                        {
                            <div class="alert alert-danger">
                                @TempData["Error"]
                            </div>
                        }
                        <form asp-action="Login" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            
                            <div class="mb-3">
                                <label asp-for="Email" class="form-label">E-posta</label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            
                            <div class="mb-3">
                                <label asp-for="Password" class="form-label">Şifre</label>
                                <input asp-for="Password" class="form-control" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            
                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary">Giriş Yap</button>
                            </div>
                        </form>
                    </div>
                    <div class="card-footer text-center">
                        <p class="mb-0">Hesabınız yok mu? <a asp-action="Register">Kayıt Ol</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html> 