@model User
@{
    ViewData["Title"] = "Profil";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Profil Bilgileri</h4>
                </div>
                <div class="card-body">
                    <form asp-action="UpdateProfile" method="post">
                        <div class="mb-4">
                            <h5>İlgi Alanlarınız</h5>
                            <p class="text-muted small">Size özel etkinlik önerileri için ilgi alanlarınızı seçin.</p>
                            <div class="row g-3">
                                @foreach (var interest in UserInterests.AllInterests)
                                {
                                    <div class="col-md-4">
                                        <div class="form-check">
                                            <input type="checkbox" 
                                                   class="form-check-input" 
                                                   id="@interest" 
                                                   name="Interests" 
                                                   value="@interest"
                                                   @(Model.Interests.Contains(interest) ? "checked" : "")>
                                            <label class="form-check-label" for="@interest">@interest</label>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Kaydet
                            </button>
                            <a href="/" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Ana Sayfaya Dön
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 