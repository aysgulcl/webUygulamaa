@model IEnumerable<webUygulama.Models.Event>

@{
    ViewData["Title"] = "Onaylı Etkinlikler";
    Layout = "_Layout";
}

<div class="container mt-4">
    <h2>Onaylı Etkinlikler</h2>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Etkinlik Adı</th>
                    <th>Tarih</th>
                    <th>Konum</th>
                    <th>Fiyat</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var evt in Model)
                {
                    <tr>
                        <td>@evt.Name</td>
                        <td>@evt.Date.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@evt.Location</td>
                        <td>@evt.Price.ToString("C")</td>
                        <td>
                            <a asp-controller="Events" asp-action="Details" asp-route-id="@evt.Id" class="btn btn-info btn-sm">Detaylar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
