@model List<webUygulama.Models.Event>

<h2>Onaylı Etkinlikler</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Etkinlik Adı</th>
            <th>Tarih</th>
            <th>Tür</th>
            <th>Onay Durumu</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var eventItem in Model)
        {
            <tr>
                <td>@eventItem.Name</td>
                <td>@eventItem.StartDateTime.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@eventItem.Genre</td>
                <td>@eventItem.IsApproved ? "Onaylı" : "Onay Bekliyor"</td>
            </tr>
        }
    </tbody>
</table>
