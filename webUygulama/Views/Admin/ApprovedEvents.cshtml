@model List<webUygulama.Models.Event>

<h2>Onaylı Etkinlikler</h2>

<table>
    <thead>
        <tr>
            <th>Etkinlik Adı</th>
            <th>Tarih</th>
            <th>Şehir</th>
            <th>Onay Durumu</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var eventItem in Model)
        {
            <tr>
                <td>@eventItem.Name</td>
                <td>@eventItem.Date</td>
                <td>@eventItem.City</td>
                <td>@eventItem.IsApproved ? "Onaylı" : "Onay Bekliyor"</td>
            </tr>
        }
    </tbody>
</table>

